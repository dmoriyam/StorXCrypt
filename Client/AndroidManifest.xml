            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FileUploadAndShare" android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name=".DownloadFiles"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name=".DemoDownload"
            android:label="@string/title_activity_demo_download" >
        </activity>
        <activity
            android:name=".DemoUpload"
            android:label="@string/title_activity_demo_upload" >
        </activity>
    </application>

</manifest>
